<div class="container-fluid">
  <div class="row">
    <div id="input-box">
      <form action="/" method="post" class="form-inline">
        <div class="form-group">
          <label for="name-input">Burger Name</label>
          <input type="text" name="burger_name" id="name-inout" class="form-control" placeholder="Burger Name">
        </div>
        <div class="form-group">
          <label for="pickles-input">Pickles</label>
          <input type="checkbox" name="pickles" id="pickles-input" class="form-control" value="true">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <button id="refreshButton" class="btn">Refresh</button>
      <button id="clearButton" class="btn">Clear</button>  
    </div>
  </div>
  <div class="row">
    <div class="col-s-6" id="uneaten-box">
      {{#each uneaten}}
        <div class="burger col-sm-6 col-lg-4 text-center">
          <img src="/assets/img/good_burger.png" class="uneaten-burger clickable" data-id="{{this.id}}" alt="Good Burger">
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">{{this.burger_name}}
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu ingredient-dropdown" id="{{this.id}}" role="menu" aria-labelledby="menu1"></ul>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-s-6" id="eaten-box">
      {{#each eaten}}
        <div class="burger col-sm-6 col-lg-4">
          <img src="/assets/img/gone_burger.png" class="eaten-burger" data-id="{{this.id}}" alt="Good Burger">
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">{{this.burger_name}}
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu ingredient-dropdown" id="{{this.id}}" role="menu" aria-labelledby="menu1"></ul>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>